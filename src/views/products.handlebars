<div class="container m-5">
    <div class="mt-5">
        <div class="table-responsive mt- rounded-lg">
            <h4 class="text-danger">Vista de Productos:</h4>
            {{#if products.length}}
            <table class="table table-dark rounded-lg">
                <thead>
                    <tr>
                        <th>Nombre:</th>
                        <th>Precio:</th>
                        <th>Foto:</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products }}
                    <tr>
                        <td class="nombre"> {{ this.nombre }} </td>
                        <td class="precio"> $ {{ this.precio }} </td>
                        <td class="foto" > <img width="40" src=" {{ this.foto }}">
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <h5 class="alert alert-danger">No se encontraron productos.</h5>
            {{/if}}
        </div>
    </div>
</div>